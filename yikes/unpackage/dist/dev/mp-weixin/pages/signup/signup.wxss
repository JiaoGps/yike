.top-bar {
  position: fixed;
  z-index: 1001;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: 25px;
}
.top-bar .top-bar-left {
    float: left;
    padding-left: 32rpx;
}
.top-bar .top-bar-left .back-img {
      margin-top: 21rpx;
      width: 48rpx;
      height: 48rpx;
}
.top-bar .top-bar-left .text {
      font-size: 32rpx;
      font-weight: 500;
      color: #272832;
      line-height: 88rpx;
}
.top-bar .top-bar-left .Avatar-img {
      margin-top: 10rpx;
      width: 68rpx;
      height: 68rpx;
      border-radius: 16rpx;
}
.top-bar .top-bar-center {
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 200rpx;
}
.top-bar .top-bar-center .logo {
      padding-top: 23rpx;
      width: 88rpx;
      height: 42rpx;
}
.top-bar .top-bar-right {
    float: right;
}
.top-bar .top-bar-right .search {
      width: 88rpx;
      height: 88rpx;
      display: inline-block;
}
.top-bar .top-bar-right .add {
      width: 88rpx;
      height: 88rpx;
      padding-right: 14rpx;
      display: inline-block;
}
.top-bar .top-bar-right .text {
      font-size: 32rpx;
      font-weight: 500;
      color: #272832;
      line-height: 88rpx;
      padding-right: 32rpx;
}
.top-bar .top-bar-right image {
      padding: 18rpx 0 0 18rpx;
      width: 52rpx;
      height: 52rpx;
}
.top-bar .top-bar-right .more-img {
      height: 88rpx;
      padding-top: 10rpx;
      padding-right: 32rpx;
}
.top-bar .top-bar-right .more-img image {
        width: 52rpx;
        height: 12rpx;
}
.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  padding-top: 10rpx;
  padding-bottom: 25px;
}
