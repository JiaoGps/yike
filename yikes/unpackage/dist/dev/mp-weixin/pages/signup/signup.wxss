.mian {
  padding: 54rpx 60rpx 120rpx;
}
.mian .title {
    font-size: 56rpx;
    font-weight: 500;
    color: #272832;
    line-height: 80rpx;
}
.mian .inputs {
    padding-top: 8rpx;
}
.mian .inputs input {
      padding-top: 40rpx;
      height: 88rpx;
      font-size: 32rpx;
      font-weight: 500;
      color: #272832;
      line-height: 88rpx;
      border-bottom: 1rpx solid rgba(39, 40, 50, 0.1);
}
.mian .inputs-div {
    position: relative;
}
.mian .employ, .mian .invalid {
    position: absolute;
    right: 0;
    top: 40rpx;
