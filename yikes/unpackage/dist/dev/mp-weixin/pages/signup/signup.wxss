    font-weight: 500;
    color: #ff5d5b;
    line-height: 88rpx;
}
.mian .ok {
    position: absolute;
    right: 0;
    top: 76rpx;
    width: 38rpx;
    height: 30rpx;
}
.mian .look {
    position: absolute;
    right: 0;
    top: 76rpx;
    width: 40rpx;
    height: 40rpx;
}
